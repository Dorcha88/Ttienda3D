---
// src/pages/index.astro
export const prerender = false;

import "../styles/global.css";
import { supabase } from "../lib/supabase";

// 1. LÓGICA DE ROLES
const { cookies } = Astro;
const accessToken = cookies.get("sb-access-token")?.value;
const refreshToken = cookies.get("sb-refresh-token")?.value;
let isAdmin = false;
let isLoggedIn = false;

if (accessToken && refreshToken) {
  const { data: { session } } = await supabase.auth.setSession({
    access_token: accessToken,
    refresh_token: refreshToken,
  });

  if (session) {
    isLoggedIn = true;
    const { data: profile } = await supabase
      .from('profiles')
      .select('role')
      .eq('id', session.user.id)
      .single();
    
    isAdmin = profile?.role === 'admin';
  }
}

// 2. TRAER PRODUCTOS (Aquí faltaba la variable 'error')
const { data: products, error } = await supabase
  .from('products')
  .select('*')
  .order('created_at', { ascending: false });
---

<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Forge3D - Impresiones de otro nivel</title>
	</head>
	<body class="bg-gray-950 text-gray-100 font-sans min-h-screen antialiased selection:bg-cyan-500/30">
		
        <nav class="fixed top-0 left-0 right-0 z-50 bg-gray-950/70 backdrop-blur-lg border-b border-white/5">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 py-4 flex justify-between items-center">
                
                <a href="/" class="text-2xl font-black tracking-tight flex items-center gap-2 group">
                    <span class="bg-gradient-to-r from-cyan-400 to-blue-600 text-transparent bg-clip-text group-hover:to-cyan-400 transition-all duration-500">
                        Forge3D
                    </span>
                </a>

                <div class="flex gap-6 items-center">
                    
                    {isAdmin && (
                        <a href="/admin" class="text-sm font-bold text-cyan-400 hover:text-cyan-300 transition bg-cyan-900/20 px-3 py-1 rounded border border-cyan-500/30">
                            Panel Admin
                        </a>
                    )}

                    {!isLoggedIn && (
                        <a href="/login" class="text-sm font-medium text-gray-400 hover:text-white transition hidden sm:block">
                            Ingresar
                        </a>
                    )}
                    
                    <a href="/carrito" class="group relative inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-800 hover:bg-gray-700 text-white text-sm font-bold transition-all hover:shadow-lg hover:shadow-cyan-500/20 border border-white/10 hover:border-cyan-500/50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-cyan-400 group-hover:scale-110 transition-transform"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>
                        <span>Carrito</span>
                        <span class="relative flex h-5 w-5">
                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-20"></span>
                            <span id="cart-count" class="relative inline-flex rounded-full h-5 w-5 bg-cyan-500 text-[10px] text-white justify-center items-center font-bold">0</span>
                        </span>
                    </a>
                </div>
            </div>
        </nav>

        <header class="relative pt-32 pb-20 px-4 text-center overflow-hidden">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-blue-500/20 blur-[120px] rounded-full pointer-events-none"></div>
            
            <div class="relative max-w-3xl mx-auto">
                <h1 class="text-5xl md:text-7xl font-extrabold mb-6 tracking-tight">
                    Tus ideas, <br/>
                    <span class="bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 text-transparent bg-clip-text leading-tight">
                        materializadas en 3D.
                    </span>
                </h1>
                <p class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
                    Impresión de alta precisión para coleccionistas, prototipos y piezas únicas. Calidad premium directo a tu puerta.
                </p>
            </div>
        </header>

		<main class="max-w-7xl mx-auto px-4 sm:px-6 pb-24">
            
            <div class="flex items-center justify-between mb-8 border-b border-gray-800 pb-4">
                <h2 class="text-2xl font-bold">Catálogo Reciente</h2>
            </div>

            {error && <div class="bg-red-500/10 border border-red-500/50 text-red-200 p-4 rounded-lg text-center">No se pudieron cargar los productos.</div>}

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                
                {products?.map((product) => (
                    <article class="group relative bg-gray-900/50 rounded-2xl overflow-hidden border border-white/10 hover:border-cyan-500/50 transition-all duration-300 hover:shadow-2xl hover:shadow-cyan-900/20 flex flex-col h-full backdrop-blur-sm">
                        
                        <div class="h-72 w-full overflow-hidden bg-gray-950 relative">
                            {product.image_url ? (
                                <img 
                                    src={product.image_url} 
                                    alt={product.name} 
                                    class="w-full h-full object-cover group-hover:scale-110 transition duration-700"
                                />
                            ) : (
                                <div class="w-full h-full flex items-center justify-center text-gray-600 bg-gray-950/80">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
                                </div>
                            )}
                            
                            <div class="absolute inset-0 bg-gray-950/0 group-hover:bg-gray-950/30 transition-all duration-300"></div>

                            <div class="absolute top-3 right-3">
                                <div class="relative">
                                    <div class="absolute inset-0 bg-cyan-500 blur-md opacity-30 rounded-full"></div>
                                    <div class="relative bg-gray-900/90 backdrop-blur text-cyan-300 font-bold px-4 py-1.5 rounded-full text-sm border border-cyan-500/30 shadow-lg">
                                        ${product.price.toLocaleString('es-CL')}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="p-6 flex flex-col flex-1 relative">
                            <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent group-hover:via-cyan-500/50 transition-all"></div>

                            <h2 class="font-bold text-xl mb-2 truncate text-white group-hover:text-cyan-400 transition-colors">{product.name}</h2>
                            <p class="text-gray-400 text-sm mb-6 line-clamp-2 flex-1 leading-relaxed">
                                {product.description || "Sin descripción disponible para este modelo."}
                            </p>
                            
                            <button 
                                class="add-to-cart-btn w-full relative overflow-hidden rounded-xl group/btn font-bold text-sm transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
                                data-id={product.id}
                                data-name={product.name}
                                data-price={product.price}
                                data-image={product.image_url}
                            >
                                <div class="absolute inset-0 bg-gradient-to-r from-cyan-600 to-blue-700 transition-all duration-300 group-hover/btn:from-cyan-500 group-hover/btn:to-blue-600"></div>
                                
                                <div class="relative px-6 py-3 flex items-center justify-center gap-2 text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover/btn:rotate-12"><path d="M12 5v14M5 12h14"/></svg>
                                    <span class="btn-text">Añadir al carrito</span>
                                </div>
                            </button>
                        </div>
                    </article>
                ))}
            </div>

            {products?.length === 0 && (
                <div class="flex flex-col items-center justify-center py-32 text-gray-500 border-2 border-dashed border-gray-800 rounded-3xl bg-gray-900/50">
                    <p class="text-xl font-medium mb-2">El inventario está vacío</p>
                </div>
            )}
		</main>

        <footer class="border-t border-white/5 py-8 text-center text-gray-500 text-sm bg-gray-950/50 backdrop-blur">
            <p>© {new Date().getFullYear()} Forge3D. Impreso con pasión.</p>
        </footer>

        <script>
            import { cartItems, addProductToCart } from "../lib/cartStore";

            const buttons = document.querySelectorAll('.add-to-cart-btn');
            
            buttons.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const target = e.currentTarget as HTMLButtonElement;
                    const textSpan = target.querySelector('.btn-text') as HTMLSpanElement;
                    
                    const product = {
                        id: target.getAttribute('data-id'),
                        name: target.getAttribute('data-name'),
                        price: parseFloat(target.getAttribute('data-price') || '0'),
                        image_url: target.getAttribute('data-image')
                    };

                    addProductToCart(product);

                    if (textSpan) {
                        const originalText = textSpan.innerText;
                        textSpan.innerText = "¡Listo!";
                        target.classList.add('bg-green-600'); 
                        
                        setTimeout(() => {
                            textSpan.innerText = originalText;
                            target.classList.remove('bg-green-600');
                        }, 1500);
                    }
                });
            });

            const countBadge = document.getElementById('cart-count');
            cartItems.subscribe(items => {
                const totalItems = Object.values(items).reduce((acc: number, item: any) => acc + item.quantity, 0);
                if (countBadge) countBadge.innerText = totalItems.toString();
            });
        </script>
	</body>
</html>