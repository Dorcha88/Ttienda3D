        function filterProducts() {
            // 1. Limpiamos los valores del buscador y filtros (min√∫sculas y sin espacios extra)
            const query = searchInput.value.toLowerCase().trim();
            const category = categoryFilter.value.toLowerCase().trim(); // <--- CLAVE
            const material = materialFilter.value.toLowerCase().trim();
            const sort = sortFilter.value;

            currentFilteredCards = allCards.filter(card => {
                // 2. Obtenemos los datos de la tarjeta y los limpiamos igual
