export const prerender = false;
import Layout from '../layouts/Layout.astro';
import { supabase } from "../lib/supabase";

// 1. VARIABLES INICIALES
let productsDB = [];
let featuredProducts = [];
let uniqueMaterials = [];
let uniqueCategories = []; 

// 2. TRAER DATOS DE SUPABASE (Pedimos Productos y Categor√≠as al mismo tiempo)
const [productsResult, categoriesResult] = await Promise.all([
  supabase.from('products').select('*').order('created_at', { ascending: false }),
  supabase.from('categories').select('name').order('name', { ascending: true })
]);

const { data: productsData, error: productsError } = productsResult;
const { data: categoriesData, error: categoriesError } = categoriesResult;

// 3. PROCESAR PRODUCTOS
if (productsData) {
  productsDB = productsData;

  // L√≥gica de destacados (Muestra los marcados como featured o los 4 √∫ltimos)
  featuredProducts = productsData.filter(p => p.is_featured === true);
  if (featuredProducts.length === 0) { 
    featuredProducts = productsData.slice(0, 4); 
  } else { 
    featuredProducts = featuredProducts.slice(0, 4); 
  }

  // Materiales √∫nicos (sacados de los productos reales)
  uniqueMaterials = [...new Set(productsData.map(p => p.material).filter(m => m))];
}

// 4. PROCESAR CATEGOR√çAS (L√ìGICA LIMPIA)
// Opci√≥n A: Usamos la Tabla Maestra 'categories' (Lo ideal)
if (categoriesData && categoriesData.length > 0) {
    uniqueCategories = categoriesData.map(c => c.name);
} 
// Opci√≥n B (Respaldo): Si la tabla falla o est√° vac√≠a, leemos de los productos existentes
else {
    const productCats = productsData ? productsData.map(p => p.category).filter(c => c) : [];
    uniqueCategories = [...new Set(productCats)].sort();
}

// Manejo de errores en consola del servidor (para que t√∫ sepas si algo falla)
if (productsError) console.error("Error cargando productos:", productsError.message);
if (categoriesError) console.error("Error cargando categor√≠as:", categoriesError.message);

// 5. AUTENTICACI√ìN (Para saber si es Admin)
const { cookies } = Astro;
const accessToken = cookies.get("sb-access-token")?.value;
const refreshToken = cookies.get("sb-refresh-token")?.value;
let isAdmin = false;

if (accessToken && refreshToken) {
  const { data: { session } } = await supabase.auth.setSession({ access_token: accessToken, refresh_token: refreshToken });
  if (session) {
    const { data: profile } = await supabase.from('profiles').select('role').eq('id', session.user.id).single();
    isAdmin = profile?.role === 'admin';
  }
}
