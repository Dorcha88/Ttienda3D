            if (shouldScroll) productsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function renderPaginationControls(totalPages) {
            if (totalPages <= 1) return;
            const prevBtn = createBtn('‚Üê', () => { if(currentPage > 1) { currentPage--; renderPage(true); } }, currentPage === 1);
            paginationControls.appendChild(prevBtn);
            let start = Math.max(1, currentPage - 2); let end = Math.min(totalPages, start + 4);
            if (end - start < 4) start = Math.max(1, end - 4);
            for (let i = start; i <= end; i++) { paginationControls.appendChild(createBtn(i, () => { currentPage = i; renderPage(true); }, false, i === currentPage)); }
            const nextBtn = createBtn('‚Üí', () => { if(currentPage < totalPages) { currentPage++; renderPage(true); } }, currentPage === totalPages);
            paginationControls.appendChild(nextBtn);
        }

        function createBtn(text, onClick, disabled, active) {
            const btn = document.createElement('button'); btn.innerText = text; btn.disabled = disabled; btn.onclick = onClick;
            let cls = "w-10 h-10 rounded-full font-bold transition flex items-center justify-center ";
            if(active) cls += "bg-pink-500 text-white shadow-md transform scale-110";
            else if(disabled) cls += "bg-gray-100 dark:bg-white text-gray-300 cursor-not-allowed";
            else cls += "bg-white dark:bg-white text-gray-600 dark:text-slate-600 border border-gray-200 dark:border-cyan-200 hover:bg-pink-50 dark:hover:bg-cyan-50 hover:text-pink-500 hover:border-pink-200";
            btn.className = cls; return btn;
        }

        function attachCartEvents() {
            // CAMBIO CLAVE: Usamos document.querySelectorAll para atrapar TODOS los botones, incluidos los destacados
            document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
                const newBtn = btn.cloneNode(true);
                btn.parentNode.replaceChild(newBtn, btn);
                newBtn.addEventListener('click', (e) => {
                    addProductToCart({
                        id: e.currentTarget.getAttribute('data-id'), name: e.currentTarget.getAttribute('data-name'),
                        price: Number(e.currentTarget.getAttribute('data-price')), image_url: e.currentTarget.getAttribute('data-image'), quantity: 1
                    });
                    if(window.toggleCart) window.toggleCart();
                });
            });
        }

        function attachFavEvents() {
            const currentFavs = favoriteItems.get();
            // CAMBIO CLAVE: Tambi√©n aqu√≠ usamos document.querySelectorAll para los corazones de destacados
            document.querySelectorAll('.fav-btn').forEach(btn => {
                const id = btn.getAttribute('data-id');
                const emptyIcon = btn.querySelector('.heart-empty');
                const fullIcon = btn.querySelector('.heart-full');
                if (currentFavs[id]) { emptyIcon.classList.add('hidden'); fullIcon.classList.remove('hidden'); }
                else { emptyIcon.classList.remove('hidden'); fullIcon.classList.add('hidden'); }
                
                const newBtn = btn.cloneNode(true);
                btn.parentNode.replaceChild(newBtn, btn);
                newBtn.addEventListener('click', (e) => {
                    e.preventDefault(); e.stopPropagation();
                    toggleFavorite({
                        id: newBtn.getAttribute('data-id'), name: newBtn.getAttribute('data-name'),
                        price: newBtn.getAttribute('data-price'), image_url: newBtn.getAttribute('data-image')
                    });
                    newBtn.querySelector('.heart-empty').classList.toggle('hidden');
                    newBtn.querySelector('.heart-full').classList.toggle('hidden');
                });
            });
        }

