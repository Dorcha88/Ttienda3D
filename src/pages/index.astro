    <script is:inline>
        (function() {
            var splash = document.getElementById('splash-screen');
            
            function removeSplash() {
                if(splash) {
                    splash.classList.add('splash-hidden');
                    setTimeout(function(){ splash.style.display = 'none'; }, 800);
                }
            }

            // 1. Si ya visit√≥, quitar INMEDIATAMENTE
            if (sessionStorage.getItem('introVisto')) {
                if(splash) splash.style.display = 'none';
            } else {
                // 2. Si es nuevo, esperar 2.5 segundos
                setTimeout(function() {
                    removeSplash();
                    sessionStorage.setItem('introVisto', 'true');
                }, 2500);
            }

            // 3. SEGURO DE VIDA: Forzar quitado a los 5 segundos si algo falla
            setTimeout(removeSplash, 5000);
        })();
    </script>

