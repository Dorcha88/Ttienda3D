    </main>

    <script>
        import { addProductToCart } from "../lib/cartStore";
        import { toggleFavorite, favoriteItems } from "../lib/favoritesStore";

        // === 2. L√ìGICA FILTROS, ORDEN Y PAGINACI√ìN ===
        const ITEMS_PER_PAGE = 12; 
        let currentPage = 1; 
        let currentFilteredCards = []; 
        
        const searchInput = document.getElementById('searchInput');
        const categoryFilter = document.getElementById('categoryFilter');
        const materialFilter = document.getElementById('materialFilter');
        const sortFilter = document.getElementById('sortFilter');
        const productsGrid = document.getElementById('productsGrid');
        const hiddenCardsContainer = document.getElementById('hiddenCards');
        const resultCount = document.getElementById('resultCount');
        const noResults = document.getElementById('noResults');
        const paginationControls = document.getElementById('paginationControls');
        const pageInfo = document.getElementById('pageInfo');
        
        const allCards = Array.from(hiddenCardsContainer.children);

        function filterProducts() {
            const query = searchInput.value.toLowerCase();
            const category = categoryFilter.value;
            const material = materialFilter.value;
            const sort = sortFilter.value;

            // Filtrado
            currentFilteredCards = allCards.filter(card => {
                const name = card.getAttribute('data-name');
                const cat = card.getAttribute('data-category');
                const mat = card.getAttribute('data-material');
                
                const matchesSearch = name.includes(query);
                const matchesCategory = category === "" || cat === category;
                const matchesMaterial = material === "" || mat === material;

                return matchesSearch && matchesCategory && matchesMaterial;
            });

            // Ordenamiento
            currentFilteredCards.sort((a, b) => {
                const priceA = Number(a.getAttribute('data-price')); const priceB = Number(b.getAttribute('data-price'));
                const nameA = a.getAttribute('data-name'); const nameB = b.getAttribute('data-name');
                const dateA = new Date(a.getAttribute('data-date')).getTime(); const dateB = new Date(b.getAttribute('data-date')).getTime();
                
                if (sort === 'price-asc') return priceA - priceB;
                if (sort === 'price-desc') return priceB - priceA;
                if (sort === 'name-asc') return nameA.localeCompare(nameB);
                if (sort === 'newest') return dateB - dateA;
                return 0;
            });

            currentPage = 1; 
            renderPage(false); 
            resultCount.innerText = currentFilteredCards.length;
        }

        // Renderizado de p√°gina
        function renderPage(shouldScroll = false) {
            productsGrid.innerHTML = ""; 
            paginationControls.innerHTML = "";
            
            if (currentFilteredCards.length === 0) { 
                noResults.classList.remove('hidden'); 
                pageInfo.innerText = ""; 
                return; 
            } else { 
                noResults.classList.add('hidden'); 
            }

            const start = (currentPage - 1) * ITEMS_PER_PAGE; 
            const end = start + ITEMS_PER_PAGE;
            const pageItems = currentFilteredCards.slice(start, end);

            pageItems.forEach(card => productsGrid.appendChild(card.cloneNode(true)));

            const totalPages = Math.ceil(currentFilteredCards.length / ITEMS_PER_PAGE);
            pageInfo.innerText = `P√°gina ${currentPage} de ${totalPages}`;
            
            renderPaginationControls(totalPages); 
            attachCartEvents(); 
            attachFavEvents();
            
            if (shouldScroll) productsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Generar botones de paginaci√≥n
        function renderPaginationControls(totalPages) {
            if (totalPages <= 1) return;
            const prevBtn = createBtn('‚Üê', () => { if(currentPage > 1) { currentPage--; renderPage(true); } }, currentPage === 1);
            paginationControls.appendChild(prevBtn);

            let start = Math.max(1, currentPage - 2); 
            let end = Math.min(totalPages, start + 4);
            if (end - start < 4) start = Math.max(1, end - 4);

            for (let i = start; i <= end; i++) {
                paginationControls.appendChild(createBtn(i, () => { currentPage = i; renderPage(true); }, false, i === currentPage));
            }
            const nextBtn = createBtn('‚Üí', () => { if(currentPage < totalPages) { currentPage++; renderPage(true); } }, currentPage === totalPages);
            paginationControls.appendChild(nextBtn);
        }

        function createBtn(text, onClick, disabled, active) {
            const btn = document.createElement('button'); btn.innerText = text; btn.disabled = disabled; btn.onclick = onClick;
            let cls = "w-10 h-10 rounded-full font-bold transition flex items-center justify-center ";
            if(active) cls += "bg-pink-500 text-white shadow-md transform scale-110";
            else if(disabled) cls += "bg-gray-100 dark:bg-slate-800 text-gray-300 cursor-not-allowed";
            else cls += "bg-white dark:bg-slate-800 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-slate-700 hover:bg-pink-50 dark:hover:bg-slate-700 hover:text-pink-500 hover:border-pink-200";
            btn.className = cls; return btn;
        }

        // Conectar botones "Agregar al Carrito"
        function attachCartEvents() {
            productsGrid.querySelectorAll('.add-to-cart-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    addProductToCart({
                        id: e.currentTarget.getAttribute('data-id'), name: e.currentTarget.getAttribute('data-name'),
                        price: Number(e.currentTarget.getAttribute('data-price')), image_url: e.currentTarget.getAttribute('data-image'), quantity: 1
                    });
                    if(window.toggleCart) window.toggleCart();
                });
            });
        }

        // === 3. L√ìGICA BOTONES FAVORITOS ===
        function attachFavEvents() {
            const currentFavs = favoriteItems.get();

            productsGrid.querySelectorAll('.fav-btn').forEach(btn => {
                const id = btn.getAttribute('data-id');
                const emptyIcon = btn.querySelector('.heart-empty');
                const fullIcon = btn.querySelector('.heart-full');

                if (currentFavs[id]) {
                    emptyIcon.classList.add('hidden');
                    fullIcon.classList.remove('hidden');
                } else {
                    emptyIcon.classList.remove('hidden');
                    fullIcon.classList.add('hidden');
                }

                const newBtn = btn.cloneNode(true);
                btn.parentNode.replaceChild(newBtn, btn);

                newBtn.addEventListener('click', (e) => {
                    e.preventDefault(); e.stopPropagation();
                    toggleFavorite({
                        id: newBtn.getAttribute('data-id'),
                        name: newBtn.getAttribute('data-name'),
                        price: newBtn.getAttribute('data-price'),
                        image_url: newBtn.getAttribute('data-image')
                    });
                    const eIcon = newBtn.querySelector('.heart-empty');
                    const fIcon = newBtn.querySelector('.heart-full');
                    eIcon.classList.toggle('hidden');
                    fIcon.classList.toggle('hidden');
                });
            });
        }

        // LISTENERS DE FILTROS
        searchInput.addEventListener('input', filterProducts);
        categoryFilter.addEventListener('change', filterProducts);
        materialFilter.addEventListener('change', filterProducts);
        sortFilter.addEventListener('change', filterProducts);
        
        // INICIO
        filterProducts(); 
    </script>
</Layout>