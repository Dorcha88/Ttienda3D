---
// src/pages/admin/index.astro
export const prerender = false;
import "../../styles/global.css";
import { supabase } from "../../lib/supabase";

const { cookies, redirect } = Astro;
const accessToken = cookies.get("sb-access-token")?.value;
const refreshToken = cookies.get("sb-refresh-token")?.value;

if (!accessToken || !refreshToken) return redirect("/login");

const { data: { session }, error } = await supabase.auth.setSession({
  access_token: accessToken,
  refresh_token: refreshToken,
});

if (!session) return redirect("/login");

const { data: products } = await supabase
  .from('products')
  .select('*')
  .order('created_at', { ascending: false });
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Dashboard - Forge3D</title>
    <meta name="viewport" content="width=device-width" />
  </head>
  <body class="bg-gray-950 text-gray-200 min-h-screen font-sans">
    
    <nav class="bg-gray-900 border-b border-white/5 px-6 py-4 flex justify-between items-center sticky top-0 z-30">
      <div class="flex items-center gap-3">
          <div class="h-8 w-8 bg-gradient-to-tr from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center font-bold text-white text-xs">
              ADM
          </div>
          <span class="font-bold text-white tracking-tight">Forge3D Panel</span>
      </div>
      <a href="/" class="text-sm font-medium text-gray-400 hover:text-white transition flex items-center gap-2">
         Ver Tienda <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </a>
    </nav>

    <main class="max-w-7xl mx-auto p-6 grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <section class="lg:col-span-1">
        <div class="bg-gray-900/50 border border-white/10 rounded-2xl p-6 sticky top-24">
          <h2 class="text-lg font-bold text-white mb-6 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" class="text-cyan-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="16"/><line x1="8" y1="12" x2="16" y2="12"/></svg>
            Nuevo Producto
          </h2>
          
          <form id="create-product-form" class="flex flex-col gap-5">
            <div>
              <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Nombre del Modelo</label>
              <input type="text" id="name" required class="w-full bg-gray-950 border border-gray-800 rounded-lg p-3 text-white focus:border-cyan-500 focus:ring-1 focus:ring-cyan-500 outline-none transition-all placeholder-gray-700" placeholder="Ej: Figura Articulada"/>
            </div>

            <div>
              <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Precio ($CLP)</label>
              <input type="number" id="price" required class="w-full bg-gray-950 border border-gray-800 rounded-lg p-3 text-white focus:border-cyan-500 outline-none transition-all placeholder-gray-700" placeholder="0"/>
            </div>

            <div>
              <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Imagen</label>
              <div class="relative">
                  <input type="file" id="image" accept="image/*" required class="w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-bold file:bg-gray-800 file:text-cyan-400 hover:file:bg-gray-700 cursor-pointer"/>
              </div>
            </div>

            <div>
              <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Descripción</label>
              <textarea id="description" rows="3" class="w-full bg-gray-950 border border-gray-800 rounded-lg p-3 text-white focus:border-cyan-500 outline-none transition-all resize-none text-sm placeholder-gray-700"></textarea>
            </div>

            <button type="submit" id="btn-submit" class="bg-cyan-600 hover:bg-cyan-500 text-white font-bold py-3 rounded-lg mt-2 transition-all shadow-lg shadow-cyan-900/20">
              Publicar Producto
            </button>
            <p id="status-msg" class="text-center text-sm mt-2 hidden font-medium"></p>
          </form>
        </div>
      </section>

      <section class="lg:col-span-2">
        <h2 class="text-lg font-bold text-white mb-6">Inventario Activo ({products?.length})</h2>
        
        <div class="space-y-3">
          {products?.map((product) => (
            <div class="bg-gray-900/30 p-4 rounded-xl flex gap-5 items-center border border-white/5 hover:border-white/10 transition-colors group">
              <div class="h-16 w-16 bg-gray-950 rounded-lg overflow-hidden border border-white/5">
                  <img src={product.image_url} alt={product.name} class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"/>
              </div>
              
              <div class="flex-1 min-w-0">
                <h3 class="font-bold text-white truncate">{product.name}</h3>
                <div class="flex items-center gap-3 mt-1">
                    <span class="text-cyan-400 font-mono text-sm bg-cyan-950/30 px-2 rounded border border-cyan-500/20">${product.price}</span>
                    <span class="text-xs text-gray-500 truncate max-w-[200px]">{product.description}</span>
                </div>
              </div>

              <button class="text-gray-600 hover:text-red-400 p-2 rounded-lg hover:bg-red-500/10 transition-colors" title="Eliminar (No implementado)">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
              </button>
            </div>
          ))}
          
          {products?.length === 0 && (
            <div class="text-center py-12 border-2 border-dashed border-gray-800 rounded-xl">
                <p class="text-gray-500">No hay productos en la base de datos.</p>
            </div>
          )}
        </div>
      </section>

    </main>

    <div id="session-data" data-access={accessToken} data-refresh={refreshToken} class="hidden"></div>

    <script>
      import { supabase } from "../../lib/supabase";

      const sessionElement = document.getElementById('session-data');
      const accessToken = sessionElement?.dataset.access;
      const refreshToken = sessionElement?.dataset.refresh;

      if (accessToken && refreshToken) {
          await supabase.auth.setSession({ access_token: accessToken, refresh_token: refreshToken });
      }

      const form = document.getElementById('create-product-form') as HTMLFormElement;
      const btn = document.getElementById('btn-submit') as HTMLButtonElement;
      const msg = document.getElementById('status-msg') as HTMLParagraphElement;

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        btn.disabled = true;
        btn.innerText = "Procesando...";
        btn.classList.add('opacity-75');
        msg.innerText = "";
        
        const name = (document.getElementById('name') as HTMLInputElement).value;
        const price = (document.getElementById('price') as HTMLInputElement).value;
        const description = (document.getElementById('description') as HTMLInputElement).value;
        const imageFile = (document.getElementById('image') as HTMLInputElement).files?.[0];

        if (!imageFile) { alert("Falta la imagen"); btn.disabled = false; return; }

        try {
            const fileExt = imageFile.name.split('.').pop();
            const fileName = `${Date.now()}.${fileExt}`;
            const { error: uploadError } = await supabase.storage.from('products').upload(fileName, imageFile);

            if (uploadError) throw uploadError;

            const { data: { publicUrl } } = supabase.storage.from('products').getPublicUrl(fileName);

            const { error: dbError } = await supabase.from('products').insert({
                name, price: parseFloat(price), description, image_url: publicUrl
            });

            if (dbError) throw dbError;

            msg.innerText = "¡Producto Publicado!";
            msg.classList.remove('hidden', 'text-red-400');
            msg.classList.add('text-green-400');
            
            setTimeout(() => window.location.reload(), 800);

        } catch (error: any) {
            console.error(error);
            msg.innerText = "Error: " + error.message;
            msg.classList.remove('hidden', 'text-green-400');
            msg.classList.add('text-red-400');
            btn.disabled = false;
            btn.innerText = "Publicar Producto";
            btn.classList.remove('opacity-75');
        }
      });
    </script>
  </body>
</html>