---
// src/pages/pedido.astro
import Layout from "../layouts/Layout.astro";
---

<Layout title="Finalizar Pedido | Prinlab3D">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4">
      <h1 class="text-3xl font-extrabold text-slate-800 mb-8 text-center">
        Finalizar Tu Compra üì¶
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div
          class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 h-fit"
        >
          <h2
            class="text-xl font-bold text-gray-700 mb-6 flex items-center gap-2"
          >
            <span>üìù</span> Tus Datos de Env√≠o
          </h2>

          <form id="checkout-form" class="space-y-4">
            <div>
              <label class="block text-sm font-bold text-gray-600 mb-1"
                >Nombre Completo</label
              >
              <input
                type="text"
                id="form-name"
                placeholder="Ej: Juan P√©rez"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 outline-none transition"
                required
              />
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-bold text-gray-600 mb-1"
                  >Tel√©fono</label
                >
                <input
                  type="tel"
                  id="form-phone"
                  placeholder="+569..."
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 outline-none transition"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-bold text-gray-600 mb-1"
                  >Comuna</label
                >
                <input
                  type="text"
                  id="form-city"
                  placeholder="Ej: Chill√°n"
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 outline-none transition"
                  required
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-600 mb-1"
                >Direcci√≥n Exacta</label
              >
              <textarea
                id="form-address"
                rows="2"
                placeholder="Calle, N√∫mero, Depto, Referencia..."
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 outline-none transition resize-none"
                required></textarea>
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-600 mb-1"
                >Email (Opcional)</label
              >
              <input
                type="email"
                id="form-email"
                placeholder="Para enviarte el comprobante"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 outline-none transition"
              />
            </div>
          </form>
        </div>

        <div
          class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 h-fit sticky top-24"
        >
          <h2
            class="text-xl font-bold text-gray-700 mb-6 flex items-center gap-2"
          >
            <span>üõí</span> Resumen del Pedido
          </h2>

          <div
            id="order-summary"
            class="space-y-4 mb-6 max-h-60 overflow-y-auto pr-2"
          >
            <p class="text-gray-400 text-center italic">
              Cargando productos...
            </p>
          </div>

          <div class="border-t border-gray-200 pt-4 mb-6">
            <div class="flex justify-between items-end">
              <span class="text-gray-600 font-bold">Total a Pagar:</span>
              <span
                id="order-total"
                class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-blue-600"
                >$0</span
              >
            </div>
          </div>

          <div class="space-y-3">
            <button
              id="btn-confirm-wsp"
              class="w-full bg-green-500 hover:bg-green-600 text-white py-4 rounded-xl font-bold shadow-lg transition transform hover:scale-[1.02] flex justify-center items-center gap-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-6 h-6 fill-current"
                viewBox="0 0 448 512"
              >
                <path
                  d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"
                ></path>
              </svg>
              <span>Confirmar por WhatsApp</span>
            </button>

            <button
              id="btn-confirm-venti"
              class="w-full bg-gray-900 hover:bg-black text-white py-4 rounded-xl font-bold shadow-lg transition transform hover:scale-[1.02] flex justify-center items-center gap-2"
            >
              <span>Pagar ahora con VentiPay</span>
            </button>
          </div>

          <a
            href="/#catalogo"
            class="block text-center text-pink-500 font-bold text-sm mt-4 hover:underline"
            >‚Üê Volver al cat√°logo</a
          >
        </div>
      </div>
    </div>
  </div>

  <script>
    import { cartItems } from "../lib/cartStore";

    const summaryContainer = document.getElementById("order-summary");
    const totalElement = document.getElementById("order-total");

    // 1. CARGAR RESUMEN
    cartItems.subscribe((items) => {
      const products = Object.values(items);

      // Si el carrito est√° vac√≠o, redireccionar al home
      if (products.length === 0 && window.location.pathname === "/pedido") {
        summaryContainer.innerHTML = `<p class="text-center text-gray-500">Tu carrito est√° vac√≠o.</p>`;
        return;
      }

      const total = products.reduce(
        (acc, i) => acc + Number(i.price) * Number(i.quantity),
        0
      );
      totalElement.innerText = `$${total.toLocaleString("es-CL")}`;

      summaryContainer.innerHTML = products
        .map(
          (p) => `
                <div class="flex gap-3 items-center">
                    <div class="w-12 h-12 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0 border border-gray-200">
                        <img src="${p.image_url}" class="w-full h-full object-contain">
                    </div>
                    <div class="flex-1 text-sm">
                        <p class="font-bold text-gray-800 line-clamp-1">${p.name}</p>
                        <p class="text-gray-500">x${p.quantity}</p>
                    </div>
                    <div class="font-bold text-gray-700 text-sm">
                        $${(p.price * p.quantity).toLocaleString("es-CL")}
                    </div>
                </div>
            `
        )
        .join("");
    });

    // 2. LOGICA WHATSAPP
    document.getElementById("btn-confirm-wsp").addEventListener("click", () => {
      const nombre = document.getElementById("form-name").value.trim();
      const telefono = document.getElementById("form-phone").value.trim();
      const ciudad = document.getElementById("form-city").value.trim();
      const direccion = document.getElementById("form-address").value.trim();
      const email = document.getElementById("form-email").value.trim();

      if (!nombre || !telefono || !ciudad || !direccion) {
        return alert("‚ö†Ô∏è Por favor completa todos los datos de env√≠o.");
      }

      const items = Object.values(cartItems.get());
      if (items.length === 0) return alert("Carrito vac√≠o");

      let msg = `Hola Prinlab3D! üëã Soy *${nombre}*.\nQuiero confirmar mi pedido:\n\n`;
      items.forEach((p) => (msg += `üì¶ ${p.quantity}x ${p.name}\n`));

      const total = items.reduce(
        (acc, i) => acc + Number(i.price) * Number(i.quantity),
        0
      );
      msg += `\nüí∞ *Total: $${total.toLocaleString("es-CL")}*\n`;

      msg += `------------------\nüöö *DATOS DE ENV√çO:*\n`;
      msg += `üë§ ${nombre}\nüìû ${telefono}\nüèôÔ∏è ${ciudad}\nüè† ${direccion}\n`;
      if (email) msg += `üìß ${email}`;

      window.open(
        "https://wa.me/56921955584?text=" + encodeURIComponent(msg),
        "_blank"
      );
    });

    // 3. LOGICA VENTIPAY
    document
      .getElementById("btn-confirm-venti")
      .addEventListener("click", async () => {
        const btn = document.getElementById("btn-confirm-venti");
        const items = Object.values(cartItems.get());
        if (items.length === 0) return alert("Carrito vac√≠o");

        btn.innerText = "Procesando...";
        btn.disabled = true;
        try {
          const res = await fetch("/api/checkout", {
            method: "POST",
            body: JSON.stringify({ items }),
          });
          const data = await res.json();
          if (data.url) window.location.href = data.url;
        } catch (e) {
          alert("Error al conectar");
        } finally {
          btn.innerText = "Pagar ahora con VentiPay";
          btn.disabled = false;
        }
      });
  </script>
</Layout>
