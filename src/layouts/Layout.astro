---

<html lang="es" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet"/>
    <style>
        #cart-items-container::-webkit-scrollbar { width: 5px; }
        #cart-items-container::-webkit-scrollbar-thumb { background: #ec4899; border-radius: 10px; }
        .cart-sidebar {
            position: fixed; top: 0; right: 0; height: 100%; width: 400px; max-width: 100%;
            background-color: #ffffff; box-shadow: -5px 0 25px rgba(0,0,0,0.1);
            transform: translateX(100%); transition: transform 0.3s ease-in-out;
            z-index: 100; display: flex; flex-direction: column; border-left: 1px solid #f3f4f6;
        }
        .cart-open { transform: translateX(0) !important; }
        .cart-overlay {
            position: fixed; inset: 0; background: rgba(0,0,0,0.3); backdrop-filter: blur(2px);
            z-index: 90; display: none;
        }
        .cart-overlay.active { display: block; }
    </style>
    <slot name="head" />
</head>
<body class="bg-gray-50 text-gray-800 font-sans min-h-screen antialiased pt-36">

    <header class="fixed top-0 left-0 right-0 z-50 shadow-sm">
        <div class="bg-gradient-to-r from-pink-600 via-purple-600 to-blue-600 text-white text-xs md:text-sm font-bold py-2 text-center shadow-inner relative z-20">
            <p class="tracking-wide">ðŸ“¦ EnvÃ­os lunes y viernes por BlueExpress y Correos Chile ðŸšš</p>
        </div>
        <nav class="bg-white/90 backdrop-blur-lg border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 py-3 flex justify-between items-center">
                <a href="/" class="flex items-center hover:opacity-80 transition">
                    <img src="/logo.jpeg" alt="Prinlab3D" class="h-14 md:h-16 w-auto object-contain" />
                </a>
                <div class="flex gap-4 items-center">
                    <a href="/nosotros" class="text-sm font-bold text-gray-500 hover:text-pink-500">Nosotros</a>
                    <a href="/contacto" class="text-sm font-bold text-gray-500 hover:text-blue-500">Contacto</a>
                    <a href="/#catalogo" class="text-sm font-bold text-gray-500 hover:text-blue-500">Productos</a>
                    <button onclick="toggleCart()" class="relative group bg-white border-2 border-blue-400 text-blue-500 hover:bg-blue-50 p-2 rounded-full transition shadow-md">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                        <span id="cart-count-badge" class="absolute -top-2 -right-2 bg-pink-500 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full shadow-sm">0</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <slot />

    <footer class="bg-white border-t border-gray-200 py-10 text-center text-gray-500 text-sm">
        <p>Â© {new Date().getFullYear()} Prinlab3D. Impreso con pasiÃ³n.</p>
    </footer>

    <div id="cart-overlay" class="cart-overlay" onclick="toggleCart()"></div>
    <div id="cart-sidebar" class="cart-sidebar">
        <div class="p-5 border-b border-gray-100 flex justify-between items-center bg-gradient-to-r from-pink-50 to-white">
            <h2 class="text-xl font-bold text-gray-800 flex items-center gap-2"><span class="text-pink-500">ðŸ›’</span> Tu Pedido</h2>
            <button onclick="toggleCart()" class="text-gray-400 hover:text-red-500 text-xl font-bold transition px-2">âœ•</button>
        </div>

        <div id="cart-items-container" class="cart-items flex-1 overflow-y-auto p-5 space-y-4 bg-white"></div>

        <div class="p-5 border-t border-gray-200 bg-white shadow-[0_-5px_20px_rgba(0,0,0,0.05)]">
            <div class="flex justify-between items-end mb-4">
                <span class="text-gray-600 font-bold text-sm">Total:</span>
                <span id="cart-total" class="text-2xl font-extrabold text-slate-800">$0</span>
            </div>
            
            <a href="/pedido" onclick="toggleCart()" class="block w-full text-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white py-4 rounded-xl font-bold shadow-lg transition transform hover:scale-[1.02]">
                Finalizar Compra
            </a>

            <button onclick="limpiarCarrito()" class="w-full text-center text-xs text-red-400 hover:text-red-600 font-bold mt-3 hover:underline">Vaciar carrito</button>
        </div>
    </div>

    <script>
    import { cartItems, removeProductFromCart } from "../lib/cartStore";

    window.toggleCart = () => {
        const sidebar = document.getElementById('cart-sidebar');
        const overlay = document.getElementById('cart-overlay');
        if (sidebar && overlay) {
            sidebar.classList.toggle('cart-open');
            overlay.classList.toggle('active');
        }
    }

    window.limpiarCarrito = () => { 
        if(confirm("Â¿Vaciar?")) cartItems.set({}); 
    };

    const container = document.getElementById('cart-items-container');
    const totalEl = document.getElementById('cart-total');
    const countEl = document.getElementById('cart-count-badge');

    cartItems.subscribe(items => {
        const products = Object.values(items);
        const total = products.reduce((acc, i) => acc + (Number(i.price) * Number(i.quantity)), 0);
        const totalCount = products.reduce((acc, i) => acc + i.quantity, 0);

        if(countEl) countEl.innerText = totalCount;
        if(totalEl) totalEl.innerText = `$${total.toLocaleString('es-CL')}`;

        if (container) {
            if (products.length === 0) {
                container.innerHTML = `<div class="h-full flex flex-col justify-center items-center text-gray-400"><span class="text-4xl mb-3">ðŸ›’</span><p>VacÃ­o</p></div>`;
            } else {
                container.innerHTML = products.map(item => `
                    <div class="flex gap-3 bg-white p-2 rounded-lg border border-gray-100 shadow-sm items-center">
                        <div class="w-12 h-12 bg-white rounded border border-gray-100 flex-shrink-0">
                            <img src="${item.image_url}" class="w-full h-full object-contain" />
                        </div>
                        <div class="flex-1 min-w-0">
                            <h4 class="font-bold text-xs text-gray-800 line-clamp-1">${item.name}</h4>
                            <p class="text-blue-600 text-xs font-bold">$${Number(item.price).toLocaleString('es-CL')}</p>
                        </div>
                        <div class="flex flex-col items-end">
                            <span class="bg-gray-100 text-gray-600 text-[10px] px-1.5 py-0.5 rounded font-bold mb-1">x${item.quantity}</span>
                            <button class="text-red-400 hover:text-red-600 text-[10px] font-bold remove-btn" data-id="${item.id}">Borrar</button>
                        </div>
                    </div>
                `).join('');
                
                document.querySelectorAll('.remove-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => removeProductFromCart(e.currentTarget.getAttribute('data-id')));
                });
            }
        }
    });
    </script>
</body>
</html>